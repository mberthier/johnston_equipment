<h2 class="mt-5 mb-5 text-center">Select a category</h2>
<div class="categories-row m-4">
  <div class="inventory-square" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1590504805643-bb1f94cde7fd?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80)">
    <%= link_to items_path do %>
      All
    <% end %>
  </div>
  <div class="inventory-square" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://res.cloudinary.com/mberthier/image/upload/v1606400531/mx0ppczvqku0e7exfbxxddr2xjha.jpg)">
    <%= link_to featured_path do %>
      Featured
    <% end %>
  </div>

  <% @categories.each do |category| %>
      <div class="inventory-square" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url('<%= cl_image_path category.photo.key %>')">
        <%= link_to category_path(category) do %>
          <%= category.name %>
        <% end %>
      </div>
  <% end %>
</div>
