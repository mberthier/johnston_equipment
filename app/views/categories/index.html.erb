<h2 class="mt-5 mb-5 text-center">Select a category</h2>
<div class="categories-row m-4">
  <% @categories.each do |category| %>
    <%= link_to(category_path(category), class: "inventory-square", style:"background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1590504805643-bb1f94cde7fd?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80);" ) do %>
      <%= category.name %>
    <% end %>
  <% end %>
</div>
