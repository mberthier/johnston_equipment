<div class="hero-banner-category" style="background-color: grey;">
  <h1>Featured</h1>
</div>

<div class="container mt-5 mb-5">
  <div class="row-items">
    <% @featured.each do |item| %>
      <%= link_to(item_path(item), class: "category-item") do %>
        <div class="category-image" style="background-image: url('<%= cl_image_path item.photos[0].key %>')"></div>
        <div class="content-item">
          <p class="title"><%= "#{item.brand} #{item.title}" %></p>
          <p class="description"><%= item.description %></p>
          <p class="price">$<%= item.price.to_s.reverse.scan(/\d{3}|.+/).join(",").reverse %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
